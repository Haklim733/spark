{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Legal Document Metadata Schema",
    "description": "Schema for legal document metadata in ELT pipeline",
    "type": "object",
    "properties": {
        "document_id": {
            "type": "string",
            "description": "Unique identifier for the document",
            "minLength": 1
        },
        "document_type": {
            "type": "string",
            "enum": [
                "contract",
                "legal_memo",
                "court_filing",
                "policy_document",
                "legal_opinion"
            ],
            "description": "Type of legal document"
        },
        "uuid": {
            "type": "string",
            "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}$",
            "description": "UUID used for filename generation"
        },
        "content_filename": {
            "type": "string",
            "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}\\.txt$",
            "description": "The .txt filename"
        },
        "metadata_filename": {
            "type": "string",
            "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}\\.json$",
            "description": "The .json filename"
        },
        "keywords": {
            "type": "array",
            "items": {"type": "string"},
            "default": [],
            "description": "Keywords associated with the document"
        },
        "generated_at": {
            "type": "string",
            "format": "date-time",
            "description": "When the document was generated"
        },
        "content_length": {
            "type": "integer",
            "minimum": 0,
            "description": "Length of the document content in characters"
        },
        "processing_timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "When the document was processed"
        },
        "source": {
            "type": "string",
            "default": "legal_document_generator",
            "description": "Source system identifier"
        },
        "metadata_version": {
            "type": "string",
            "default": "1.0",
            "description": "Version of metadata schema"
        },
        "content_file_path": {
            "type": "string",
            "description": "S3 path to the content file"
        },
        "metadata_file_path": {
            "type": "string",
            "description": "S3 path to the metadata file"
        }
    },
    "required": [
        "document_id",
        "document_type",
        "uuid",
        "content_filename",
        "metadata_filename",
        "generated_at",
        "content_length",
        "processing_timestamp"
    ],
    "additionalProperties": false
}
